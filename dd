<script>
jQuery(function($) {
  $(document).ready(function() {

    const winWidth = $( window ).width();

    console.log("레디");
    const undl = $('div.news-contents span[style="text-decoration: underline;"]');
    undl.attr('style', '').addClass('servicesLink');

    if(winWidth < 801) {
      $button = $('button[onclick="fusionNavClickExpandBtn(this);"]');
      var $menuMobile = $('#menu-mobile_menu'); 

      $button.on('click', function() {
        console.log("클릭됨");
        var isExpanded = $(this).attr('aria-expanded');

        if (isExpanded === 'true') { 
          console.log("열기"); $menuMobile.css('top' , '100%');
        } else {
          console.log("닫기");
          $menuMobile.css('top', '-430%');
        }
      });	
    }

    if(winWidth < 1065 && winWidth > 800){ 
      $("#menu-fcdc").append("<div class='menu-social-area'><a class='menu-social menu-social-facebook' target='_blank' href='https://www.facebook.com/FamilyCareDentalClinic'></a><a class='menu-social menu-social-insta' target='_blank' href='https://www.instagram.com/familycaredentalclinic'></a><a class='menu-social menu-social-twitter' target='_blank' href='https://twitter.com/nvfamilydental'></a></div>");
    }


  });
  $("#menu-mobile_menu").append("<div class='menu-social-area'><a class='menu-social menu-social-facebook' target='_blank' href='https://www.facebook.com/FamilyCareDentalClinic'></a><a class='menu-social menu-social-insta' target='_blank' href='https://www.instagram.com/familycaredentalclinic'></a><a class='menu-social menu-social-twitter' target='_blank' href='https://twitter.com/nvfamilydental'></a></div>");

  $("#menu-mobile_menu").prepend("<div class='mobile-header-call'><a class='mobile-header-call1' href='tel:+16049873545'><i class='fas fa-phone-square-alt'></i></a></div>");
});
  

</script>